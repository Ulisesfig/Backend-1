<div class="cart-container" data-cart-id="{{cartId}}">
  <h1>{{title}}</h1>

  {{#if error}}
    <div class="alert alert-error">
      <strong>Error:</strong> {{error}}
    </div>
  {{else}}
    {{#if products.length}}
      <div class="cart-content">
        <div class="cart-items">
          {{#each products}}
            <div class="cart-item" data-product-id="{{this.product._id}}">
              <div class="cart-item-image">
                {{#if this.product.thumbnails.length}}
                  {{#each this.product.thumbnails}}
                    {{#if @first}}
                      <img src="{{this}}" alt="{{../this.product.title}}" onerror="this.src='https://via.placeholder.com/100x100?text=Sin+Imagen'">
                    {{/if}}
                  {{/each}}
                {{else}}
                  <img src="https://via.placeholder.com/100x100?text=Sin+Imagen" alt="Sin imagen">
                {{/if}}
              </div>
              
              <div class="cart-item-info">
                <h3>{{this.product.title}}</h3>
                <p class="cart-item-code">C√≥digo: {{this.product.code}}</p>
                <p class="cart-item-category">Categor√≠a: {{this.product.category}}</p>
              </div>
              
              <div class="cart-item-quantity">
                <label>Cantidad:</label>
                <div class="quantity-controls">
                  <button onclick="updateQuantity('{{this.product._id}}', {{this.quantity}}, -1)">-</button>
                  <input type="number" value="{{this.quantity}}" min="1" 
                         onchange="setQuantity('{{this.product._id}}', this.value)">
                  <button onclick="updateQuantity('{{this.product._id}}', {{this.quantity}}, 1)">+</button>
                </div>
              </div>
              
              <div class="cart-item-price">
                <p class="unit-price">${{this.product.price}} c/u</p>
                <p class="total-price">${{multiply this.product.price this.quantity}}</p>
              </div>
              
              <button class="btn-remove" onclick="removeFromCart('{{this.product._id}}')">
                üóëÔ∏è
              </button>
            </div>
          {{/each}}
        </div>
        
        <div class="cart-summary">
          <h2>Resumen del pedido</h2>
          <div class="summary-line">
            <span>Subtotal:</span>
            <span id="subtotal">${{calculateTotal products}}</span>
          </div>
          <div class="summary-line total">
            <span>Total:</span>
            <span id="total">${{calculateTotal products}}</span>
          </div>
          <button class="btn-checkout" onclick="proceedToCheckout()">Proceder al pago</button>
          <button class="btn-clear" onclick="clearCart()">Vaciar carrito</button>
        </div>
      </div>
    {{else}}
      <div class="empty-cart">
        <p>Tu carrito est√° vac√≠o</p>
        <a href="/products" class="btn-shop">Ir a comprar</a>
      </div>
    {{/if}}
  {{/if}}

  <div class="cart-actions">
    <a href="/products" class="btn-continue">‚Üê Continuar comprando</a>
  </div>
</div>

<style>
  .cart-container {
    max-width: 1200px;
    margin: 0 auto;
  }
  .cart-content {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 30px;
    margin-top: 30px;
  }
  @media (max-width: 968px) {
    .cart-content {
      grid-template-columns: 1fr;
    }
  }
  .cart-items {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  .cart-item {
    display: grid;
    grid-template-columns: 100px 2fr 150px 120px auto;
    gap: 20px;
    align-items: center;
    padding: 20px;
    background: #f9f9f9;
    border-radius: 8px;
    border: 1px solid #e0e0e0;
  }
  @media (max-width: 768px) {
    .cart-item {
      grid-template-columns: 1fr;
      text-align: center;
    }
  }
  .cart-item-image img {
    width: 100%;
    border-radius: 8px;
  }
  .cart-item-info h3 {
    color: #1b263b;
    margin: 0 0 10px 0;
  }
  .cart-item-code,
  .cart-item-category {
    font-size: 0.9em;
    color: #666;
    margin: 5px 0;
  }
  .cart-item-quantity label {
    display: block;
    font-size: 0.9em;
    color: #555;
    margin-bottom: 5px;
  }
  .quantity-controls {
    display: flex;
    gap: 5px;
    align-items: center;
  }
  .quantity-controls button {
    padding: 5px 12px;
    background: #1b263b;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }
  .quantity-controls input {
    width: 60px;
    padding: 5px;
    text-align: center;
    border: 1px solid #ddd;
    border-radius: 4px;
  }
  .cart-item-price {
    text-align: right;
  }
  .unit-price {
    font-size: 0.9em;
    color: #666;
    margin: 0;
  }
  .total-price {
    font-size: 1.3em;
